#!/bin/sh
export FC=ftn

case ${COMP:?} in
#-------------------------------------------------------------------------------#
# PROD build settings for Intel ifort compiler
#-------------------------------------------------------------------------------#
  intel)
    FCFLAGS="-O3 -axCore-AVX2 -g -fPIC -traceback -fixed"
  ;;
#-------------------------------------------------------------------------------#
# PROD build settings for Cray crayftn compiler
#-------------------------------------------------------------------------------#
  cray)
    FCFLAGS="-O2 -G2 -fPIC"
  ;;
  *)
    >&2 echo "Don't know how to build lib under $COMP compiler"
    exit 1
  ;;
esac
export FCFLAGS

